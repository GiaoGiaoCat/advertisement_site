.widget
  .widget-title
    .icon
      %i.icon20.i-stack-checkmark
    %h4 应用信息

  .widget-content
    = simple_form_for [:manage, @application], :html => { :class => 'form-horizontal' } do |f|
      .control-group.radio_buttons.required.manage_application_platform
        %label.radio_buttons.required.control-label
          %abbr{ title: 'required' } *
          选择平台
        .controls.controls-row
          %label.radio.inline.span3
            = f.radio_button("platform", 1)
            = show_platform_name(1, true)
          %label.radio.inline.span3
            = f.radio_button("platform", 2)
            = show_platform_name(2, true)
      = f.input :name, :label => "应用名称", input_html: { class: 'span12' }
      = f.input :display_advertising, :label => "是否推广广告", required: true
      = f.input :description, as: :text, :label => "应用简介", input_html: { class: 'span12' }

      .form-actions
        = f.button :submit, "保存", :class => 'btn btn-primary'
        = link_to '取消', :back, :class => 'btn'
