.widget
  .widget-title
    .icon
      %i.icon20.i-stack-checkmark
    %h4 平台帐号创建信息

  .widget-content
    = simple_form_for [:manage, @platform, @platform_account], :html => { :class => 'form-horizontal' } do |f|
      = f.input :account_name, :label => "帐号名称", input_html: { class: 'span5' }
      .form-actions
        = f.button :submit, "保存", :class => 'btn btn-primary'
        = link_to '取消', :back, :class => 'btn'
