.widget
  .widget-title
    .icon
      %i.icon20.i-stack-checkmark
    %h4 平台创建信息

  .widget-content
    = simple_form_for [:manage, @platform], :html => { :class => 'form-horizontal' } do |f|
      = f.input :name, :label => "平台名称", input_html: { class: 'span5' }
      = f.input :adv_content_ids, collection: AdvContent.activity.map{|content| [content.tag, content.id]}, as: :check_boxes, :label => "推广广告"
      .form-actions
        = f.button :submit, "保存", :class => 'btn btn-primary'
        = link_to '取消', :back, :class => 'btn'
