.container
  =simple_form_for [:manage, @adv_setting]do |f|
    = f.error_notification

    .form-inputs
      = f.input :channel, label: '渠道'
      = f.input :activity, label: '激活'
      / = f.input :product_name, label: '产品名称'
      = f.association :application, label: '应用'
    .form-actions
      = f.button :submit, '保存'
      = link_to '取消', :back, class: 'btn'
= link_to '删除', manage_adv_setting_path(@adv_setting), method: :delete, class: 'btn btn-danger'
