#reg
  .page-header
    %h3.center 注册帐号
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
    .row-fluid
      = devise_error_messages!
      = show_flash_messages
      .control-group
        .controls-row
          .icon
            %i.icon20.i-envelop-2
          = f.email_field :email, placeholder: 'Email', class: 'span12', :autofocus => true, :required => true

      .control-group
        .controls-row
          .icon
            %i.icon20.i-key
          = f.password_field :password, placeholder: 'Password', class: 'span12', :required => true

      .control-group
        .controls-row
          .icon
            %i.icon20.i-key
          = f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'span12', :required => true

      .form-actions.full
        = submit_tag "注册", class: 'btn btn-large btn-block btn-success'
